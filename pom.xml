			</profiles>
		</settings>

		release into maven central:
		mvn clean deploy -P release, <autoReleaseAfterClose> have to set to "false"
		mvn nexus-staging:release -P release
	 -->

	<description>Calculate german tax with generated code from https://www.bmf-steuerrechner.de</description>
	<url>https://github.com/admiralsmaster/taxcalculator</url>
	<inceptionYear>2015</inceptionYear>
	<issueManagement>
		<system>github</system>
		<url>https://github.com/admiralsmaster/taxcalculator/issues</url>
	</issueManagement>
	<licenses>
		<license>
			<distribution>repo</distribution>
			<name>The MIT License (MIT)</name>
			<url>http://opensource.org/licenses/mit-license.php</url>
		</license>
	</licenses>
	<developers>
		<developer>
			<name>Ariel KÃ¼chler</name>
			<url>https://github.com/admiralsmaster</url>
		</developer>
	</developers>
	<scm>
		<connection>scm:git:git@github.com:admiralsmaster/taxcalculator.git</connection>
		<developerConnection>scm:git:git@github.com:admiralsmaster/taxcalculator.git</developerConnection>
		<url>git@github.com:admiralsmaster/taxcalculator.git</url>
	</scm>

	<properties>
		<project.java.version>1.7</project.java.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<file.host>https://www.bmf-steuerrechner.de</file.host>
		<classes.package.directory>info/kuechler/bmf/taxcalculator</classes.package.directory>
		<file.download.target>${project.build.directory}/download-files</file.download.target>
		<project.src.directory>${project.build.directory}/generated-classes</project.src.directory>
		<file.generated.target>${project.src.directory}/${classes.package.directory}</file.generated.target>
	</properties>

	<dependencies>

		<!-- test dependencies -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpclient</artifactId>
			<version>4.5.1</version>
			<scope>test</scope>
			<exclusions>
				<exclusion>
					<!-- exclude, we use slf4j with adapter for commons logging -->
					<artifactId>commons-logging</artifactId>
					<groupId>commons-logging</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
		    <groupId>org.apache.commons</groupId>
		    <artifactId>commons-lang3</artifactId>
		    <version>3.4</version>
		    <scope>test</scope>
		</dependency>

		<!-- logging for tests -->
		<dependency>
			<!-- we use slf4j -->
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.7.12</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<!-- commons-logging bridge for httpclient -->
			<groupId>org.slf4j</groupId>
			<artifactId>jcl-over-slf4j</artifactId>
			<version>1.7.12</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<!-- log4j-2 adapter -->
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-slf4j-impl</artifactId>
			<version>2.4.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<!-- log4j-2 impl -->
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-core</artifactId>
			<version>2.4.1</version>
			<scope>test</scope>
		</dependency>

	</dependencies>

	<build>
		<sourceDirectory>${project.src.directory}</sourceDirectory>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.3</version>
				<configuration>
					<source>${project.java.version}</source>
					<target>${project.java.version}</target>
				</configuration>
			</plugin>

			<!-- download pseudo code XMLs -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>wagon-maven-plugin</artifactId>
				<version>1.0</version>
				<executions>
					<execution>
						<id>download-2016</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>download-single</goal>
						</goals>
						<configuration>
							<url>${file.host}</url>
							<fromFile>pruefdaten/Lohnsteuer2016.xml</fromFile>
							<toFile>${file.download.target}/Lohnsteuer2016Big.xml</toFile>
						</configuration>
					</execution>
					<execution>
						<id>download-2015-December</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>download-single</goal>
						</goals>
						<configuration>
							<url>${file.host}</url>
							<fromFile>pruefdaten/Lohnsteuer2015Dezember.xml</fromFile>
							<toFile>${file.download.target}/Lohnsteuer2015DezemberBig.xml</toFile>
						</configuration>
					</execution>
					<execution>
						<id>download-2015-November</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>download-single</goal>
						</goals>
						<configuration>
							<url>${file.host}</url>
							<fromFile>pruefdaten/Lohnsteuer2015BisNovember.xml</fromFile>
							<toFile>${file.download.target}/Lohnsteuer2015Big.xml</toFile>
						</configuration>
					</execution>
					<execution>
						<id>download-2014</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>download-single</goal>
						</goals>
						<configuration>
							<url>${file.host}</url>
							<fromFile>pruefdaten/Lohnsteuer2014.xml</fromFile>
							<toFile>${file.download.target}/Lohnsteuer2014Big.xml</toFile>
						</configuration>
					</execution>
					<execution>
						<id>download-2013</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>download-single</goal>
						</goals>
						<configuration>
							<url>${file.host}</url>
							<fromFile>pruefdaten/Lohnsteuer2013_2.xml</fromFile>
							<toFile>${file.download.target}/Lohnsteuer2013Big.xml</toFile>
						</configuration>
					</execution>
					<execution>
						<id>download-2012</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>download-single</goal>
						</goals>
						<configuration>
							<url>${file.host}</url>
							<fromFile>pruefdaten/Lohnsteuer2012.xml</fromFile>
							<toFile>${file.download.target}/Lohnsteuer2012Big.xml</toFile>
						</configuration>
					</execution>
					<execution>
						<id>download-2011-December</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>download-single</goal>
						</goals>
						<configuration>
							<url>${file.host}</url>
							<fromFile>pruefdaten/Lohnsteuer2011Dezember.xml</fromFile>
							<toFile>${file.download.target}/Lohnsteuer2011DecemberBig.xml</toFile>
						</configuration>
					</execution>
					<execution>
						<id>download-2011-November</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>download-single</goal>
						</goals>
						<configuration>
							<url>${file.host}</url>
							<fromFile>pruefdaten/Lohnsteuer2011BisNovember.xml</fromFile>
							<toFile>${file.download.target}/Lohnsteuer2011NovemberBig.xml</toFile>
						</configuration>
					</execution>
					<execution>
						<id>download-2010</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>download-single</goal>
						</goals>
						<configuration>
							<url>${file.host}</url>
							<fromFile>pruefdaten/Lohnsteuer2010Big.xml</fromFile>
							<toFile>${file.download.target}/Lohnsteuer2010Big.xml</toFile>
						</configuration>
					</execution>
					<execution>
						<id>download-2009</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>download-single</goal>
						</goals>
						<configuration>
							<url>${file.host}</url>
							<fromFile>pruefdaten/Lohnsteuer2009Big.xml</fromFile>
							<toFile>${file.download.target}/Lohnsteuer2009Big.xml</toFile>
						</configuration>
					</execution>
					<execution>
						<id>download-2008</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>download-single</goal>
						</goals>
						<configuration>
							<url>${file.host}</url>
							<fromFile>pruefdaten/Lohnsteuer2008Big.xml</fromFile>
							<toFile>${file.download.target}/Lohnsteuer2008Big.xml</toFile>
						</configuration>
					</execution>
					<execution>
						<id>download-2007</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>download-single</goal>
						</goals>
						<configuration>
							<url>${file.host}</url>
							<fromFile>pruefdaten/Lohnsteuer2007Big.xml</fromFile>
							<toFile>${file.download.target}/Lohnsteuer2007Big.xml</toFile>
						</configuration>
					</execution>
					<execution>
						<id>download-2006</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>download-single</goal>
						</goals>
						<configuration>
							<url>${file.host}</url>
							<fromFile>pruefdaten/Lohnsteuer2006Big.xml</fromFile>
							<toFile>${file.download.target}/Lohnsteuer2006Big.xml</toFile>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- rename name attribute (will be class name) in 2011, there are two 
				classes with the same name attribute -->
			<plugin>
				<groupId>com.google.code.maven-replacer-plugin</groupId>
				<artifactId>replacer</artifactId>
				<version>1.5.3</version>
				<executions>
					<execution>
						<id>replace-2011-December</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>replace</goal>
						</goals>
						<configuration>
							<file>${file.download.target}/Lohnsteuer2011DecemberBig.xml</file>
							<regex>false</regex>
							<replacements>
								<replacement>
									<token>Lohnsteuer2011Big</token>
									<value>Lohnsteuer2011DecemberBig</value>
								</replacement>
							</replacements>
						</configuration>
					</execution>
					<execution>
						<id>replace-2011-November</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>replace</goal>
						</goals>
						<configuration>
							<file>${file.download.target}/Lohnsteuer2011NovemberBig.xml</file>
							<regex>false</regex>
							<replacements>
								<replacement>
									<token>Lohnsteuer2011Big</token>
									<value>Lohnsteuer2011NovemberBig</value>
								</replacement>
							</replacements>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- XSL transformation -->
			<plugin>
				<groupId>net.sf.xsltmp</groupId>
				<artifactId>xslt-generator-maven-plugin</artifactId>
				<version>1.8</version>
				<executions>
					<execution>
						<id>transform</id>
						<goals>
							<goal>many-to-many</goal>
						</goals>
						<phase>generate-sources</phase>
						<configuration>
							<xslTemplate>src/main/config/transform.xsl</xslTemplate>
							<srcDir>${file.download.target}</srcDir>
							<destDir>${file.generated.target}</destDir>
							<fileNameRegex>\.xml$</fileNameRegex>
							<fileNameReplacement>.java</fileNameReplacement>
							<sourceEncoding>${project.build.sourceEncoding}</sourceEncoding>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- format code for good source view :) -->
			<plugin>
				<groupId>net.revelc.code</groupId>
				<artifactId>formatter-maven-plugin</artifactId>
				<version>0.5.2</version>
				<executions>
					<execution>
						<id>format</id>
						<goals>
							<goal>format</goal>
						</goals>
						<phase>generate-sources</phase>
						<configuration>
							<directories>
								<directory>${project.build.sourceDirectory}</directory>
							</directories>
							<compilerCompliance>${project.java.version}</compilerCompliance>
							<compilerSource>${project.java.version}</compilerSource>
							<compilerTargetPlatform>${project.java.version}</compilerTargetPlatform>
							<encoding>${project.build.sourceEncoding}</encoding>
							<overrideConfigCompilerVersion>true</overrideConfigCompilerVersion>
							<configFile>src/main/config/formatter.xml</configFile>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>

	<profiles>
		<profile>
			<!-- profile for release, local development is faster w/o this plugins -->
			<id>release</id>

			<!-- snapshot repository for release -->
			<distributionManagement>
				<snapshotRepository>
					<id>ossrh</id>
					<url>https://oss.sonatype.org/content/repositories/snapshots</url>
				</snapshotRepository>
			</distributionManagement>

			<build>
				<plugins>

					<!-- right java version, no release with higher java version -->
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-enforcer-plugin</artifactId>
						<version>1.4.1</version>
						<executions>
							<execution>
								<id>display-info</id>
								<phase>validate</phase>
								<goals>
									<goal>display-info</goal>
								</goals>
							</execution>
							<execution>
								<id>enforce-versions</id>
								<phase>validate</phase>
								<goals>
									<goal>enforce</goal>
								</goals>
								<configuration>
									<rules>
										<requireJavaVersion>
											<version>[${project.java.version},1.8)</version>
										</requireJavaVersion>
									</rules>
								</configuration>
							</execution>
						</executions>
					</plugin>

					<!-- create source jar -->
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-source-plugin</artifactId>
						<version>2.4</version>
						<executions>
							<execution>
								<id>attach-sources</id>
								<goals>
									<goal>jar-no-fork</goal>
								</goals>
							</execution>
						</executions>
					</plugin>

					<!-- create javadoc jar -->
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-javadoc-plugin</artifactId>
						<version>2.10.3</version>
						<executions>
							<execution>
								<id>attach-javadocs</id>
								<goals>
									<goal>jar</goal>
								</goals>
							</execution>
						</executions>
					</plugin>

					<!-- sign files -->
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-gpg-plugin</artifactId>
						<version>1.6</version>
						<executions>
							<execution>
								<id>sign-artifacts</id>
								<phase>verify</phase>
								<goals>
									<goal>sign</goal>
								</goals>
							</execution>
						</executions>
					</plugin>

					<!-- plugin for release -->
					<plugin>
						<groupId>org.sonatype.plugins</groupId>
						<artifactId>nexus-staging-maven-plugin</artifactId>
						<version>1.6.6</version>
						<extensions>true</extensions>
						<configuration>
							<serverId>ossrh</serverId>
							<nexusUrl>https://oss.sonatype.org/</nexusUrl>
							<autoReleaseAfterClose>false</autoReleaseAfterClose>
						</configuration>
					</plugin>

				</plugins>
			</build>
		</profile>
	</profiles>

</project>